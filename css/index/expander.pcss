/* 悬浮框 */
#see {
    z-index: 2;
    display: block;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background: rgba(0, 0, 0, 0.6);
    text-align: center;
    align-items: center;
    justify-content: center;
}

/* 图片展示区 */
#see #screen {
    cursor: zoom-out;
    z-index: -1;
    box-sizing: border-box;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: 2%;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
}

/* 捐献按钮区 */
#see > #don {
    cursor: no-drop;
    display: inline-block;
    box-shadow: 0 0 20px #ffffff;
    border-radius: 10px;
    padding: 40px 0;
    margin: 5% 0 0;
    width: 300px;
    background: rgb(255, 255, 255);
}

/* 捐献按钮 */
#see > #don .buttons {
    cursor: pointer;
    padding: 10px 0;
    margin: 10px 0;
    width: 100px;
    font-size: 12pt;
}

@media screen and (min-width: 375px) {
    /* 捐献按钮区 */
    #see > #don {
        width: 350px;
    }

    /* 捐献按钮 */
    #see > #don .buttons {
        font-size: 15pt;
        width: 150px;
    }
}